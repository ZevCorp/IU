{
    "name": "iu-os",
    "version": "1.0.0",
    "description": "IÃœ OS - Minimalist overlay interface with neural graph visualization",
    "main": "main.js",
    "scripts": {
        "dev": "electron .",
        "build": "npm run obfuscate && electron-builder --win portable",
        "build:dir": "electron-builder --win --dir",
        "obfuscate": "node scripts/obfuscate.js",
        "publish": "electron-builder --win portable --publish always"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ZevCorp/IU.git"
    },
    "build": {
        "appId": "com.iu.os",
        "productName": "IU",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "node_modules/**/*",
            "!node_modules/playwright/.local-browsers/**/*"
        ],
        "extraResources": [
            {
                "from": ".env",
                "to": ".env"
            }
        ],
        "asar": true,
        "asarUnpack": [
            "node_modules/playwright/**/*"
        ],
        "win": {
            "target": "portable",
            "icon": "assets/icon.ico",
            "signAndEditExecutable": false
        },
        "portable": {
            "artifactName": "${productName}-${version}-Windows.exe"
        },
        "publish": {
            "provider": "github",
            "owner": "ZevCorp",
            "repo": "IU"
        }
    },
    "keywords": [
        "electron",
        "overlay",
        "eye-tracking",
        "hrm"
    ],
    "author": "Felipe Maldonado",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "javascript-obfuscator": "^4.1.0"
    },
    "dependencies": {
        "@nut-tree-fork/nut-js": "^4.2.6",
        "axios": "^1.13.4",
        "dotenv": "^17.2.3",
        "electron-updater": "^6.1.7",
        "gsap": "^3.12.0",
        "mongodb": "^7.0.0",
        "openai": "^6.17.0",
        "playwright": "^1.58.0",
        "qrcode": "^1.5.4"
    }
}
